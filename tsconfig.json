{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "rollup.config.js"
  ]
}