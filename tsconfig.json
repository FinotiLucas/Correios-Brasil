{
  "input": "./src/index.ts",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true 
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "rollup.config.js"
  ]
}